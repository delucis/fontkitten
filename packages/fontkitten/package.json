{
  "name": "fontkitten",
  "version": "1.0.0",
  "description": "A lightweight font data library — fontkit’s little sibling",
  "keywords": [
    "opentype",
    "font",
    "typography",
    "emoji",
    "glyph"
  ],
  "scripts": {
    "test": "node --test",
    "test:bun": "for i in ./test/*.js; do echo \"\n\n\n\n\n\n\" && bun test --only-failures $i; done",
    "build": "tsdown --dts --no-fixed-extension"
  },
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=24.12.0"
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/delucis/fontkitten.git",
    "directory": "packages/fontkitten"
  },
  "dependencies": {
    "tiny-inflate": "^1.0.3"
  },
  "devDependencies": {
    "@fontkitten/restructure": "^0.0.7",
    "@types/node": "^24.10.4",
    "tsdown": "^0.18.3"
  }
}
